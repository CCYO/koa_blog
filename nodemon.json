{
  "ignore": ["server/views/", "server/utils/render/template/","server/assets/", "src/js/", "src/css/", "src/_views/"],
  "env": {
    "NODE_PORT": 8080
  },
  "events": {
    "crash": "sh -c 'lsof -i :${PORT:-8080} -t | xargs kill'"
  },
  "verbose": true,
  "exec": "node server/bin/www",
  "ext": "js,mjs,json,ejs"
}
