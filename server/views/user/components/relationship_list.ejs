<% for( _type in relationShip){ %> <% let _list = relationShip[_type] %>
<div class="card">
  <div class="card-header">
    <h5><%= _type === "fansList" ? "粉絲" : "偶像" %>列表</h5>
  </div>
  <div class="card-body">
    <div class="betterscroll-outer" id="<%= _type %>">
      <ul class="list-group list-group-horizontal"></ul>
      <% if(_list.length) {%>
        <% _list.forEach( _user => { %> <%- ejs_render.relationshipItem({ user:
        _user }) %> <% }) %>
      <% } else { %>
        <p>很遺憾，列表裡沒有人</p>
      <% } %>
    </ul>
    </div>
  </div>
</div>
<% } %>
